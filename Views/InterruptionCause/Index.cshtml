<!-- CONTAINER CARD START -->
<div class="col-sm-12">
  <div class="card shadow-custom border border-custom">
    <!-- CARD HEADER START -->
    <div
      class="card-header grid border-bottom bg-gray-200 bg-gradient shadow d-md-flex align-items-center justify-content-between gap-2 px-3 py-2">
      <div class="d-flex gap-2 mb-2 mb-md-0">
        <div class="input-group input-group-outline input-group-sm bg-white rounded">
          <label class="form-label">Arama Yap</label>
          <input type="text" id="filter-text-boxInterruptionCauses" class="form-control form-control-sm"
            oninput="onFilterTextBoxChanged(gridOptionsInterruptionCausesApi,this)">
        </div>
        <div class="btn-group d-flex">
          <button type="button" class="btn btn-icon px-2 py-1 bg-gradient bg-white border border-custom text-dark mb-0"
            onclick=" customSizeToFit(gridOptionsInterruptionCausesApi)" data-bs-tooltip="tooltip"
            data-bs-placement="bottom" title="Sığdır" data-container="body" data-animation="true">
            <span class="btn-inner--icon">
              <i class="material-icons text-dark fs-6">
                horizontal_distribute
              </i>
            </span>
          </button>
          <button type="button" class="btn btn-icon px-2 py-1 bg-gradient bg-white border border-custom text-dark mb-0"
            onclick="customAutoSizeAll(gridOptionsInterruptionCausesApi,false)" data-bs-tooltip="tooltip"
            data-bs-placement="bottom" title="Otomatik Boyutlandır" data-container="body" data-animation="true">
            <span class="btn-inner--icon">
              <i class="material-icons text-dark fs-6">
                vertical_distribute
              </i>
            </span>
          </button>
          <button type="button" class="btn btn-icon px-2 py-1 bg-gradient bg-white border border-custom text-dark mb-0"
            onclick="customAutoSizeAll(gridOptionsInterruptionCausesApi,true)" data-bs-tooltip="tooltip"
            data-bs-placement="bottom" title="Otomatik Boyutlandır (Başlıkları Önemseme)" data-container="body"
            data-animation="true">
            <span class="btn-inner--icon">
              <i class="material-icons text-dark fs-6">
                density_large
              </i>
            </span>
          </button>
          <button type="button" class="btn btn-icon px-2 py-1 bg-gradient bg-white border border-custom text-dark mb-0"
            onclick="gridExportExcel(gridOptionsInterruptionCausesApi)" data-bs-tooltip="tooltip"
            data-bs-placement="bottom" title="Excel'e Aktar" data-container="body" data-animation="true">
            <span class="btn-inner--icon">
              <i class="material-icons text-dark fs-6">
                upload_file
              </i>
            </span>
          </button>
          <button type="button" class="btn btn-icon px-2 py-1 bg-gradient bg-white border border-custom text-dark mb-0"
            onclick="gridLayoutSave(gridOptionsInterruptionCausesApi,'GridInterruptionCauses',getCookie('testUserId'));"
            data-bs-tooltip="tooltip" data-bs-placement="bottom" title="Düzeni Kaydet" data-container="body"
            data-animation="true">
            <span class="btn-inner--icon">
              <i class="material-icons text-dark fs-6">
                save
              </i>
            </span>
          </button>
        </div>
      </div>
      <div class="btn-group d-flex">
        <button class="btn btn-icon px-2 py-1 bg-white border border-custom mb-0" data-bs-toggle="modal"
          data-bs-target="#modalInterruptionCauses" data-bs-tooltip="tooltip" data-bs-placement="bottom" title="Ekle"
          data-container="body" data-animation="true">
          <span class="btn-inner--icon">
            <i class="material-icons text-dark fs-6 fw-bold">
              add
            </i>
          </span>
        </button>
        <button class="btn btn-icon px-2 py-1 bg-white border border-custom mb-0"
          onclick="agGridSelectedrow(gridOptionsInterruptionCausesApi, 'InterruptionCauses', 'Güncelle', 'Duruş Tanım Listesi');"
          data-bs-tooltip="tooltip" data-bs-placement="bottom" title="Düzenle" data-container="body"
          data-animation="true">
          <span class="btn-inner--icon">
            <i class="material-icons text-dark fs-6">
              edit
            </i>
          </span>
        </button>
        <button class="btn btn-icon px-2 py-1 bg-white border border-custom mb-0"
          onclick="agGridSelectedrow(gridOptionsInterruptionCausesApi, 'InterruptionCauses', 'Sil',  'Duruş Tanım Listesi');"
          data-bs-tooltip="tooltip" data-bs-placement="bottom" title="Sil" data-container="body" data-animation="true">
          <span class="btn-inner--icon">
            <i class="material-icons text-dark fs-6">
              delete
            </i>
          </span>
        </button>
      </div>
    </div>
    <!-- CARD HEADER END -->
    <!-- CARD BODY START -->
    <div class="card-body p-3 grid-container">
      <div id="GridInterruptionCauses" class="ag-theme-alpine">
      </div>
    </div>
    <!-- CARD BODY END -->
  </div>
</div>
<!-- CONTAINER CARD END -->

<!-- MODAL START -->
<div class="modal modal-xl fade" id="modalInterruptionCauses" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLabel" style="z-index: 9999;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-top" role="document">
    <div class="modal-content">
      <!-- MODAL HEADER START  -->
      <div class="modal-header bg-gradient bg-gray-200 border-bottom shadow py-2">
        <h6 class="modal-title" id="exampleModalLabel">Duruş Tanım Bilgileri</h6>
        <button type="button" class="btn-close text-dark d-flex align-items-center justify-content-center"
          data-bs-dismiss="modal" aria-label="Close">
          <span class="fs-4" aria-hidden="true">×</span>
        </button>
      </div>
      <!-- MODAL HEADER END  -->
      <!-- MODAL BODY START  -->
      <div class="modal-body">
        <div class="row">
          <form id="formInterruptionCauses">
            <div class="col-sm-12">
              <div class="row">
                <div class="col-sm-12 col-md-6">
                  <div class="col-12 mb-2 d-none">
                    <div class="input-group input-group-static">
                      <label id="lbl_id" for="id" class="fw-bolder text-sm mb-1">id</label>
                      <input type="text" id="id" class="form-control form-control-sm form-control-custom">
                    </div>
                  </div>
                  <div class="col-12 mb-2 d-none">
                    <div class="input-group input-group-static">
                      <label id="lbl_createdAt" for="createdAt" class="fw-bolder text-sm mb-1">createdAt</label>
                      <input type="text" id="createdAt" class="form-control form-control-sm form-control-custom"
                        placeholder="createdAt">
                    </div>
                  </div>
                  <div class="col-12 mb-2 d-none">
                    <div class="input-group input-group-static">
                      <label id="lbl_updatedAt" for="updatedAt" class="fw-bolder text-sm mb-1">updatedAt</label>
                      <input type="text" id="updatedAt" class="form-control form-control-sm form-control-custom"
                        placeholder="updatedAt">
                    </div>
                  </div>
                  <div class="col-12 mb-2 d-none">
                    <div class="input-group input-group-static">
                      <label id="lbl_active" for="active" class="fw-bolder text-sm mb-1">active</label>
                      <input type="text" id="active" class="form-control form-control-sm form-control-custom">
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="input-group input-group-static">
                      <label id="lbl_code" for="code" class="fw-bolder text-sm mb-1">Kod</label>
                      <input type="text" id="code" class="form-control form-control-sm form-control-custom">
                      <small></small>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="input-group input-group-static">
                      <label id="lbl_description" for="description" class="fw-bolder text-sm mb-1">Açıklama</label>
                      <input type="text" id="description" class="form-control form-control-sm form-control-custom">
                      <small></small>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="input-group input-group-static">
                      <label id="lbl_interruptionCategory" for="interruptionCategory"
                        class="fw-bolder text-sm mb-1">Duruş
                        Kategorisi</label>
                      <input type="text" id="interruptionCategory"
                        class="form-control form-control-sm form-control-custom" placeholder="Duruş Kategorisi">
                      <small></small>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="dropdown-custom">
                      <label id="lbl_branchID" for="branchID" class="fw-bolder mb-1 ms-0">Şube</label>
                      <select name="branchID" id="branchID">
                        <option value="">Lütfen bir seçim yapınız...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="dropdown-custom">
                      <label id="lbl_interruptionCauseGroupID" for="interruptionCauseGroupID"
                        class="fw-bolder mb-1 ms-0">Duruş Grubu</label>
                      <select name="interruptionCauseGroupID" id="interruptionCauseGroupID">
                        <option value="">Lütfen bir seçim yapınız...</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-sm-12 col-md-6">
                  <div class="col-12 mb-2">
                    <div class="input-group input-group-static">
                      <label id="lbl_name" for="name" class="fw-bolder text-sm mb-1">Adı</label>
                      <input type="text" id="name" class="form-control form-control-sm form-control-custom">
                      <small></small>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="dropdown-custom">
                      <label id="lbl_workCenterID" for="workCenterID" class="fw-bolder mb-1 ms-0">İş Merkezi</label>
                      <select name="workCenterID" id="workCenterID" data-required-element="5">
                        <option value="">Lütfen bir seçim yapınız...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="input-group input-group-static">
                      <label class="fw-bolder text-sm mb-1" id="lbl_standardTime" for="standardTime">Standart
                        Zaman</label>
                      <input type="number" class="form-control form-control-sm form-control-custom"
                        placeholder="Standart Zaman" id="standardTime">
                      <small></small>
                    </div>
                  </div>
                  <div class="col-12 mb-2">
                    <div class="form-check form-switch">
                      <label id="lbl_planned" for="planned" class="form-check-label fw-bold">Planlı</label>
                      <input id="planned" class="form-check-input" type="checkbox">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- MODAL BODY END  -->
      <!-- MODAL FOOTER START  -->
      <div class="modal-footer">
        <button type="button" id="closeInterruptionCauses"
          class="btn btn-sm btn-outline-secondary shadow border border-custom m-0 me-2"
          data-bs-dismiss="modal">Kapat</button>
        <button type="button" id="submitInterruptionCauses"
          class="btn btn-sm bg-gradient btn-brand-color shadow m-0 me-1"
          onclick="ModalInsertAndUpdate('modalInterruptionCauses');">Kaydet</button>
      </div>
      <!-- MODAL FOOTER END  -->
    </div>
  </div>
</div>
<!-- MODAL END  -->

<!-- MODAL SCRIPT START  -->
