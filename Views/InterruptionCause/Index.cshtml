    $('#interruptionCauseGroupID').val(data.interruptionCauseGroupID ?? data.InterruptionCauseGroupID);
    $('#interruptionCauseGroupID').val(data.interruptionCauseGroupID ?? data.InterruptionCauseGroupID);
