    var masterData;
    async function kartdoldur(Idparameter) {
        var url = "/Methods/GetByForDropDown";
        const postData = {
            body: {
                "viewName": "vw_WorkCenters",
                "whereCause": {
                    "Id": Idparameter
                }
            }
        };


